        System.out.println("D. Dr.Drs.Abdul Gafur,M.Si.,M.Sc.,Ph.D");
        System.out.println("KETIK JAWABAN ANDA : ");
        jawaban2 = in.nextLine();
        switch (jawaban1.toUpperCase()) {
            case "A":
                System.out.println("1.Jawaban anda salah");
                break;
            case "B":
                System.out.println("1.Jawaban anda salah");
                break;
            case "C":
                System.out.println("1.Jawaban anda salah");
                break;
            case "D":
                System.out.println("1.Jawaban anda benar");
                break;
            default:
                System.out.print("1.Ini bukan sebuah jawaban ");

        }
        switch (jawaban2.toUpperCase()) {
            case "A":
                System.out.println("2.Jawaban anda salah");
                break;
            case "B":
                System.out.println("2.Jawaban anda salah");
                break;
            case "C":
                System.out.println("2.Jawaban anda salah");
                break;
            case "D":
                System.out.println("2.Jawaban anda benar");
                break;
            default:
